<div class="row">
  <div class="col-md-8"><!-- make room for blog naviation -->

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

<p style="font-size: 1.5em"><%= @post.title %><small><br /><i class="fa fa-clock-o"></i>&nbsp;<%= reformatted_post_datetime(@post.created_at) %>&nbsp;by Yaku</small></p>

<!-- I got these buttons from simplesharebuttons.com -->
<div id="share-buttons">

	<!-- Facebook -->
	<a href="http://www.facebook.com/sharer.php?u=<%= request.original_url %>" target="_blank"><img src="http://www.simplesharebuttons.com/images/somacro/facebook.png" alt="Facebook" /></a>
	<!-- Twitter -->
	<a href="http://twitter.com/share?url=<%= request.original_url %>&text=<%= @post.title %>" target="_blank"><img src="http://www.simplesharebuttons.com/images/somacro/twitter.png" alt="Twitter" /></a>
	<!-- Google+ -->
	<a href="https://plus.google.com/share?url=<%= request.original_url %>" target="_blank"><img src="http://www.simplesharebuttons.com/images/somacro/google.png" alt="Google" /></a>
	<!-- Pinterest -->
	<a href="javascript:void((function()%7Bvar%20e=document.createElement('script');e.setAttribute('type','text/javascript');e.setAttribute('charset','UTF-8');e.setAttribute('src','http://assets.pinterest.com/js/pinmarklet.js?r='+Math.random()*99999999);document.body.appendChild(e)%7D)());"><img src="http://www.simplesharebuttons.com/images/somacro/pinterest.png" alt="Pinterest" target="_blank" /></a>
</div>

<% if current_user %>
  <p><%= link_to 'Edit', edit_post_path(@post), :class => "btn btn-default" %>
  </p>
<% end %>


<hr>
<%= image_tag(@post.image_url, :class => "img-responsive") %> 
<hr>
<p><%= raw @post.description %></p>

<hr>

<fb:comments href="<%= request.original_url %>" width="500" numposts="5" colorscheme="dark"></fb:comments>

</div>

<div class="col-lg-4">
    <div class="well yaku-well">
      <h4>Blog Search</h4>
      <br />
      <div class="input-group">
        <input type="text" class="form-control">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
        </span>
      </div><!-- /input-group -->
    </div><!-- /well -->
    <div class="well yaku-well">
      <h4>Blog Categories</h4>
       
    </div><!-- /well -->
    <div class="well yaku-well">
      <h4>Archive</h4>
      <br />
      <% @recent_posts.each do |post| %>
        <p><%= link_to post.title, post %></p>
      <% end %>
      <br />
      <h4><%= link_to 'Full Archive', archives_index_path %></h4>
    </div><!-- /well -->
  </div>
</div>

  </div>
</div>