<p id="notice"><%= notice %></p>

<p style="font-size: 1.5em"><%= @post.title %><small><br /><span class="glyphicon glyphicon-time"></span><%= @post.created_at %>by Yaku</small></p>
  
  <% if session[:user_id] %>
	  <p><%= link_to 'Edit', edit_post_path(@post), :class => "btn btn-default" %>
	  </p>
  <% end %>

<hr>
<%= image_tag(@post.image_url, :class => "img-responsive") %> 
<hr>
<p><%= @post.description %></p>

<hr>

<!-- the comment box -->
<div class="well">
  <h4>Leave a Comment:</h4>
  <form role="form">
    <div class="form-group">
      <textarea class="form-control" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<hr>

